<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p><%= task.details %></p>
  <p><%= task.completed %></p>

  <%= link_to "Supprimer", task_path(task), method: :delete, data: {confirm: "Are you sure?"} %>
  <%= link_to "Modifier", edit_task_path(task) %>
  <%= link_to "Retour", tasks_path %>

  <% end %>
